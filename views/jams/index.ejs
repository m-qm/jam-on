

<div class="container bg-3 text-center">
  <h2 class="mt-4"><%= page %></h2>
  
  <div class="row text-center">
  <% jams.forEach(jam => { %>

  <article class="card jam-info bg-3 text-center col-md-4 pt-4 pb-4 mt-3">    
    <h3 class="page-header mb-4"><%= jam.title %> </h3>
    <div class="jam-info">
      <p> City: <%= jam.city %> </p>
      <p> About: <%= jam.info %> </p>
      <p> Description: <%= jam.description %> </p>
      <p> Style: <%= jam.style %> </p>
      <p> Instruments: <%= jam.instruments %> </p>
      <p> NÂº of Attendees: <%= jam.attendees.length %> </p>
    </div>
    
    <div class="btn-wrapper d-flex justify-content-center">
      <a class="btn ml-1 mr-1" href="/jams/<%= jam._id%>"><i class="fas fa-info-circle"></i></a>
      <% if(jam.isMyJam) { %>
        <form action="jams/<%= jam._id%>/delete" method="post">
          <button class="btn ml-1 mr-1"><i class="far fa-trash-alt"></i></button>
        
        </form>
      <% } %>

      <% if(jam.isAttending){ %>
        <form action="jams/<%= jam._id%>/attend" method="post">
          <button type="submit" class="btn ml-1 mr-1" ><i class="fas fa-star"></i></button>
        </form>
      <% } else { %>
        <form action="jams/<%= jam._id%>/attend" method="post">
          <button type="submit" class="btn ml-1 mr-1" ><i class="far fa-star"></i></button>
        </form>
      <% } %>
      <% if (jam.isMyJam) { %>
        <a class="btn ml-1 mr-1" href="/jams/<%= jam._id%>/edit"><i class="fas fa-pencil-alt"></i></a>
      <% } %>
      </div>
      </article>
    <% }) %>
  </div>

  <div class="row text-center">
  <a href="/jams/add" class="mt-5 btn-outline btn-block">Add a new Jam</a>
  <a href="/" class="mt-2 btn-outline btn-block">Go back</a>
  </div>

</div>
