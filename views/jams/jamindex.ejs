<!DOCTYPE html>
<html lang="en">
<head>
 <% include partials/head %> 
</head>
<body>
<% include partials/menu %>

<div class="container-fluid bg-3 text-center">    
  <h3><%= page %></h3><br>
  <div class="row">
    <div class="col-sm-4">

      <ul id="Jam-list">
      <%Jam.forEach(result => { %>
      <article class="Jam-info">
        <p> <%= result.name %> </p>
        <form action="jams/<%= result._id%>/delete" method="post">
        <button> <i class="far fa-trash-alt"></i></button>
        </form>

        <a href="/jams/<%= result._id%>">Info</a>
        <a href="/jams/<%= result._id%>/edit">Edit</a>
      <% }) %>
      </div>
    </div>

      </article>
    </ul>
    <a href="/jams/new">Add a new Jam</a>
    <a href="/" class="btn btn-outline-secondary">Go back</a>

    </body>
<% include partials/script %>
</html>
